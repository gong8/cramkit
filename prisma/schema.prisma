datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id        String   @id @default(cuid())
  name      String
  module    String?
  examDate  DateTime?
  scope     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  resources     Resource[]
  relationships Relationship[]
  concepts      Concept[]
}

model Resource {
  id        String       @id @default(cuid())
  sessionId String
  session   Session      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  name      String
  type      ResourceType
  label     String?
  splitMode String       @default("auto")
  isIndexed      Boolean @default(false)
  isGraphIndexed Boolean @default(false)
  graphIndexDurationMs Int?
  files     File[]
  chunks    Chunk[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([sessionId])
}

enum ResourceType {
  LECTURE_NOTES
  PAST_PAPER
  PROBLEM_SHEET
  SPECIFICATION
  OTHER
}

model File {
  id         String   @id @default(cuid())
  resourceId String
  resource   Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  filename   String
  role       FileRole
  rawPath       String
  processedPath String?
  pageCount  Int?
  fileSize   Int?
  createdAt  DateTime @default(now())
  @@index([resourceId])
}

enum FileRole {
  PRIMARY
  MARK_SCHEME
  SOLUTIONS
  SUPPLEMENT
}

model Chunk {
  id         String   @id @default(cuid())
  resourceId String
  resource   Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  sourceFileId String?

  parentId  String?
  parent    Chunk?  @relation("ChunkTree", fields: [parentId], references: [id], onDelete: Cascade)
  children  Chunk[] @relation("ChunkTree")

  index     Int
  depth     Int     @default(0)
  nodeType  String  @default("section")
  slug      String?
  diskPath  String?

  title     String?
  content   String
  startPage Int?
  endPage   Int?
  keywords  String?

  createdAt DateTime @default(now())

  @@index([resourceId])
  @@index([parentId])
}

model Relationship {
  id        String  @id @default(cuid())
  sessionId String
  session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  sourceType  String
  sourceId    String
  sourceLabel String?

  targetType  String
  targetId    String
  targetLabel String?

  relationship String
  confidence   Float  @default(1.0)
  createdBy    String @default("system")

  createdAt DateTime @default(now())

  @@index([sessionId])
  @@index([sourceType, sourceId])
  @@index([targetType, targetId])
}

model Concept {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  name        String
  description String?
  aliases     String?

  createdBy   String  @default("system")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([sessionId, name])
  @@index([sessionId])
}
