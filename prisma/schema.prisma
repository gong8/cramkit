datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id        String   @id @default(cuid())
  name      String
  module    String?
  examDate  DateTime?
  scope     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  files         File[]
  relationships Relationship[]
  concepts      Concept[]
}

model File {
  id            String   @id @default(cuid())
  sessionId     String
  session       Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  filename      String
  type          FileType
  label         String?

  rawPath       String
  processedPath String?
  indexPath      String?

  pageCount Int?
  fileSize             Int?
  splitMode  String  @default("auto")

  isIndexed            Boolean @default(false)
  isGraphIndexed       Boolean @default(false)
  graphIndexDurationMs Int?
  chunks    Chunk[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum FileType {
  LECTURE_NOTES
  PAST_PAPER
  MARK_SCHEME
  PROBLEM_SHEET
  PROBLEM_SHEET_SOLUTIONS
  PAST_PAPER_WITH_MARK_SCHEME
  PROBLEM_SHEET_WITH_SOLUTIONS
  SPECIFICATION
  OTHER
}

model Chunk {
  id     String @id @default(cuid())
  fileId String
  file   File   @relation(fields: [fileId], references: [id], onDelete: Cascade)

  parentId  String?
  parent    Chunk?  @relation("ChunkTree", fields: [parentId], references: [id], onDelete: Cascade)
  children  Chunk[] @relation("ChunkTree")

  index     Int
  depth     Int     @default(0)
  nodeType  String  @default("section")
  slug      String?
  diskPath  String?

  title     String?
  content   String
  startPage Int?
  endPage   Int?
  keywords  String?

  createdAt DateTime @default(now())

  @@index([fileId])
  @@index([parentId])
}

model Relationship {
  id        String  @id @default(cuid())
  sessionId String
  session   Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  sourceType  String
  sourceId    String
  sourceLabel String?

  targetType  String
  targetId    String
  targetLabel String?

  relationship String
  confidence   Float  @default(1.0)
  createdBy    String @default("system")

  createdAt DateTime @default(now())

  @@index([sessionId])
  @@index([sourceType, sourceId])
  @@index([targetType, targetId])
}

model Concept {
  id          String   @id @default(cuid())
  sessionId   String
  session     Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  name        String
  description String?
  aliases     String?

  createdBy   String  @default("system")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([sessionId, name])
  @@index([sessionId])
}
